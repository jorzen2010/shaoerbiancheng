@model SkyEntity.VideoCourse
@{
    ViewBag.Title = "课程中心";
}
@section Topcss {
    <link rel="stylesheet" href="//g.alicdn.com/de/prismplayer/2.6.0/skins/default/aliplayer-min.css" />
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            第 @Model.Paixu 节《@Model.Title》
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li><a href="#">课程中心</a></li>
            <li class="active">@Model.Title</li>
        </ol>
    </section>
    <div class="pad margin no-print">
        <div class="callout callout-info" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> 课程简介:</h4>
           @Model.Info
        </div>
    </div>
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    第1节 《@Model.Title》
                    <small class="pull-right">学习日期: @DateTime.Now</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>

        <!-- /.row -->
        <!-- Table row -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-offset-2 col-md-8">
                    <div class="prism-player" style="height: 500px;" id="J_prismPlayer">
                    </div>
                </div>
                <!-- /.col -->
            </div>

        </div>
        <!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="box-footer clearfix">
            <div class="row no-print">
                <div class="col-xs-12">
                    @*<a href="invoice-print.html" target="_blank" class="btn btn-warning"><i class="fa fa-print"></i> 学完来测试一下吧</a>*@
                    <button type="button" class="btn btn-success pull-right">
                        <i class="fa fa-credit-card"></i> 我学会了，我要去自己创作啦！
                    </button>
                    <button type="button" class="btn btn-danger pull-right" style="margin-right: 5px;">
                        <i class="fa fa-download"></i> 学完后加老师微信：sky20100
                    </button>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
</div>

@section BottomScripts {

    <script type="text/javascript" src="//g.alicdn.com/de/prismplayer/2.6.0/aliplayer-min.js"></script>
    <script type="text/javascript">

    //初始化编辑器
    var player = new Aliplayer({
        id: "J_prismPlayer",
        autoplay: false,
        width: "100%",
      //  height: "550px",
        vid: "@ViewBag.VideoId",
        playauth: "@ViewBag.PlayAuth",
    });

    </script>

}