    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>6S少儿编程</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/plugins/iCheck/square/blue.css">
    <link rel="stylesheet" href="/Resource/css/6scode.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1">

            </div>
            <div class="col-md-10">
                <h2>6S少儿编程学习系统 <small>能提升孩子学习成绩的编程课</small></h2>
            </div>
            <div class="col-md-1">

            </div>
        </div>     
       
    </div>
    <div class="container-fluid login-page">

        <div class="row" style="margin-top:80px;" >
        <div class="col-md-6">

        </div>
        <div class="col-md-6">
            <div class="login-box">

                <!-- /.login-logo -->
                <div class="login-box-body">
                    @if (!string.IsNullOrEmpty(ViewBag.msg))
                        {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            @ViewBag.msg
                        </div>
                        }
                        else
                        {
                        <p class="login-box-msg">请输入账号和密码</p>
                        }

                    <form action="/UserAccount/login" method="post">
                        <div class="form-group has-feedback">
                            <input type="hidden" class="form-control" name="ReturnUrl" id="ReturnUrl" value="@ViewBag.returnUrl">
                            <input type="text" name="UserName" id="UserName" class="form-control" placeholder="用户名">
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" name="Password" id="Password" class="form-control" placeholder="密码">
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                
                                <button type="submit" class="btn btn-success btn-block btn-flat">登陆</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    <div class="social-auth-links text-center">
                        <p>- 系统说明 -</p>
                        <p>本系统只有报名学员才能使用<br />报名请联系微信：sky20100</p>
                    </div>
                </div>
                <!-- /.login-box-body -->
            </div>
        </div>
    </div>   

        
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1">

            </div>
            <div class="col-md-10">
